<div class="container pt-4">
<h2>Edit <%= resource_name.to_s.humanize %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= devise_error_messages! %>

    <div class="field">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>

    <div class="field">
      <%= f.label :name %><br />
      <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
    </div>

    <div class="field">
      <%= f.label :sex %>
      <%= f.select :sex, options_for_select([['Hombre', 1], ['Mujer', 2] ]),{ include_blank: true } %>

    <div class="field">
      <%= f.label :photo %><br />
      <%= f.file_field :photo %>
    </div>

    <div class="field">
      <%= f.label :age %>
      <%= f.number_field :age %>
    </div>

    <div class="field">
      <%= f.label :family_id %>
      <%= f.select :family_id, options_for_select( Family.all.collect {|fa| [ fa.name, fa.id ] } ),{ include_blank: true } ,class: "familias" %>
    </div>

    <div class="field">
      <%= f.label :physical_activity_level %>
      <%= f.select :physical_activity_level, options_for_select([['Sedentario (Sin actividad fisica)', 1], ['Intensidad media de deporte (2 - 3 veces a la semana)', 2], ['Intensidad alta de deporte (5 -7 veces por semana)', 3] ]),{ include_blank: true } %>
    </div>

    <div class="field">
      <%= f.label :height %>
      <%= f.number_field :height %>
    </div>

    <div class="field">
      <%= f.label :weight %>
      <%= f.number_field :weight %>
    </div>

  <div class="field">
    <%= f.label :password %> <i>(leave blank if you don't want to change it)</i><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
    <% if @minimum_password_length %>
      <br />
      <em><%= @minimum_password_length %> characters minimum</em>
    <% end %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :current_password %> <i>(we need your current password to confirm your changes)</i><br />
    <%= f.password_field :current_password, autocomplete: "current-password" %>
  </div>

  <div class="actions">
    <%= f.submit "Update" %>
  </div>
<% end %>

<h3>Cancel my account</h3>

<p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>

<%= link_to "Back", :back %>
</div>
