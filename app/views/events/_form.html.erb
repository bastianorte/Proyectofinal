<%= form_with(model: event, local: true) do |form| %>
  <% if event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
      <% event.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :food_id, "Comida" %>
    <%= form.select :food_id, options_for_select( Food.all.collect {|fa| [ fa.name, fa.id ] } ),{ include_blank: true } %>
  </div>

  <div class="field">
    <%= form.label :user_id, "Usuario" %>
    <%= form.select :user_id, options_for_select( User.all.collect {|fa| [ fa.name, fa.id ] } ),{ include_blank: true } %>
  </div>

  <div class="actions">
    <%= form.submit "Enviar", class: "btn btn-primary" %>
  </div>
<% end %>
