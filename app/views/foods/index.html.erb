<p id="notice"><%= notice %></p>

<h1>Foods</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Weight</th>
      <th>Protein</th>
      <th>Calorie</th>
      <th>Carbohydrate</th>
      <th>Photo</th>
      <th>Portion</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @foods.each do |food| %>
      <tr>
        <td><%= food.name %></td>
        <td><%= food.weight %></td>
        <td><%= food.protein %></td>
        <td><%= food.calorie %></td>
        <td><%= food.carbohydrate %></td>
        <td><%= food.photo %></td>
        <td><%= food.portion %></td>
        <td><%= link_to 'Show', food %></td>
        <td><%= link_to 'Edit', edit_food_path(food) %></td>
        <td><%= link_to 'Destroy', food, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

