    <% @foods.each do |food| %>
        <div class="card">
          <div class="card-body">
            <div class="row">
        <div class="col"><img src="<%= food.photo.thumb %>"></div>
        <div class="col"><%= food.name %></div>
        <div class="col"><%= food.weight %></div>
        <div class="col"><%= food.protein %></div>
        <div class="col"><%= food.calorie %></div>
        <div class="col"><%= food.carbohydrate %></div>
        <div class="col"><%= food.portion %></div>
